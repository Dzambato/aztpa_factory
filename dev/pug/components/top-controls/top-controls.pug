ul.top-controls.d-flex.justify-content-end
    each root, index in nav.topContacts
        li
            div.language-picker.dropdown
                a#language-picker__button.dropdown-toggle.dropdown-link(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                    = "Русский"
                    +icon("world")
                div.dropdown-menu.scrollable-menu
                    form#language-picker(action="/i18n/" method="post")
                        input(name="next" type="hidden" value="/ru-ru/")
                        a.dropdown-item.language-pick.dropdown-link.active(data-lang="ru-ru")= "Русский"
                        a.dropdown-item.language-pick.dropdown-link(data-lang="en")= "English"
        li
            if index === "phone"
                - prop = "tel:"
            if index === "mail"
                - prop = "mailto:"
            if index === "skype"
                - prop = "skype:"
            a(href=`${prop}${root.value}`)= root.value
                +icon(root.icon)